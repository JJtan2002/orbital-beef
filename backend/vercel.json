{
    "builds": [
        {
            "src": "vercel-build.sh",
            "use": "@vercel/static-build",
            "config": {
                "outputDirectory": "dist/"
            }
        },
        {
            "src": "cashflow/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb", 
                "runtime": "python3.12" 
            }
        },
        {
            "src": "api/fetch-stock-data.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "cashflow/wsgi.py"
        },
        {
            "src": "/api/fetch-stock-data",
            "dest": "/api/fetch-stock-data.js"
        }
    ],
    "regions": ["sin1"],
    "crons": [
        {
            "path": "/api/fetch-stock-data",
            "schedule": "35 2 * * *"
        }
    ],
    "outputDirectory": "dist/"
}