{
    "builds": [
        {
            "src": "vercel-build.sh",
            "use": "@vercel/static-build",
            "config": {
                "outputDirectory": "dist/"
            }
        },
        {
            "src": "cashflow/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb", 
                "runtime": "python3.12" 
            }
        },
        {
            "src": "api/fetch-stock-data.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
          }
    ],
    "routes": [
        {
            "src": "/api/fetch-stock-data",
            "dest": "/api/fetch-stock-data.py"
        },
        {
            "src": "/(.*)",
            "dest": "cashflow/wsgi.py"
        }
    ],
    "regions": ["sin1"],
    "crons": [
        {
            "path": "/api/fetch-stock-data",
            "schedule": "0 15 * * *"
        }
    ],
    "outputDirectory": "dist/"
}